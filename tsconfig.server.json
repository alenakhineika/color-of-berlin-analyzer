{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./build",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node"],
    "typeRoots" : ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": [
    "./src/server"
  ],
  "exclude": [
    "./src/client"
  ]
}